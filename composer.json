{
    "name": "bkuhl/bible-ranges",
    "description": "A PHP library for handling scripture ranges with exclusions and JSON serialization",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Brian Kuhl",
            "email": "brian@bkuhl.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "bkuhl/bible-csb": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "BKuhl\\BibleRanges\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BKuhl\\BibleRanges\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --no-coverage",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
